<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="TaskPaneApp">
  <Id>cdf19592-a2fc-4b2e-96e8-fcbc050c9b18</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>LEVANT</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="LEVANT"/>
  <Description DefaultValue="A comprehensive PV design and simulation tool."/>
  <IconUrl DefaultValue="https://orhanelturk.github.io/Orhan3/Levantlogo.png"/>
  <HighResolutionIconUrl DefaultValue="https://orhanelturk.github.io/Orhan3/Levantlogo.png"/>
  <SupportUrl DefaultValue="https://www.contoso.com/help"/>
  <AppDomains>
    <AppDomain>https://www.contoso.com</AppDomain>
  </AppDomains>
  <Hosts>
    <Host Name="Workbook"/>
  </Hosts>
  <DefaultSettings>
    <SourceLocation DefaultValue="https://orhanelturk.github.io/Orhan3/taskpane.html"/>
  </DefaultSettings>
  <Permissions>ReadWriteDocument</Permissions>
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="Workbook">
        <DesktopFormFactor>
          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <CustomTab id="TabLEVANTPV">
              <Label resid="CustomTab.Label"/>
              
              <!-- Group 1: Project Info -->
              <Group id="GroupProjectInfo">
                <Label resid="GroupProjectInfo.Label"/>
                <Control xsi:type="Button" id="InputSheetButton">
                  <Label resid="InputSheetButton.Label"/>
                  <Icon>
                    <bt:Image size="16" resid="Icon.InputSheet"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="InputSheet.Url"/>
                  </Action>
                </Control>
                <Control xsi:type="Button" id="LoadsButton">
                  <Label resid="LoadsButton.Label"/>
                  <Icon>
                    <bt:Image size="16" resid="Icon.Loads"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Loads.Url"/>
                  </Action>
                </Control>
                <Control xsi:type="Button" id="ProjectLocationButton">
                  <Label resid="ProjectLocationButton.Label"/>
                  <Icon>
                    <bt:Image size="16" resid="Icon.ProjectLocation"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="ProjectLocation.Url"/>
                  </Action>
                </Control>
                <Control xsi:type="Button" id="TariffsButton">
                  <Label resid="TariffsButton.Label"/>
                  <Icon>
                    <bt:Image size="16" resid="Icon.Tariffs"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Tariffs.Url"/>
                  </Action>
                </Control>
              </Group>

              <!-- Group 2: Solar Resource Data -->
              <Group id="GroupSolarResourceData">
                <Label resid="GroupSolarResourceData.Label"/>
                <Control xsi:type="Button" id="ImportWeatherDataButton">
                  <Label resid="ImportWeatherDataButton.Label"/>
                  <Icon>
                    <bt:Image size="16" resid="Icon.ImportWeatherData"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="ImportWeatherData.Url"/>
                  </Action>
                </Control>
                <Control xsi:type="Button" id="GetFromPVGISButton">
                  <Label resid="GetFromPVGISButton.Label"/>
                  <Icon>
                    <bt:Image size="80" resid="Icon.GetFromPVGIS"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="GetFromPVGIS.Url"/>
                  </Action>
                </Control>
              </Group>

              <!-- Repeat for Groups 3-8 -->
              
            </CustomTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <!-- Icons -->
        <bt:Image id="Icon.InputSheet" DefaultValue="https://example.com/icons/inputsheet.png"/>
        <bt:Image id="Icon.Loads" DefaultValue="https://example.com/icons/loads.png"/>
        <bt:Image id="Icon.ProjectLocation" DefaultValue="https://example.com/icons/projectlocation.png"/>
        <bt:Image id="Icon.Tariffs" DefaultValue="https://example.com/icons/tariffs.png"/>
        <bt:Image id="Icon.ImportWeatherData" DefaultValue="https://example.com/icons/importweatherdata.png"/>
        <bt:Image id="Icon.GetFromPVGIS" DefaultValue="https://example.com/icons/getfrompvgis.png"/>
        <!-- Add other icons here -->
      </bt:Images>
      <bt:Urls>
        <!-- URLs -->
        <bt:Url id="InputSheet.Url" DefaultValue="https://orhanelturk.github.io/Orhan3/InputSheet.html"/>
        <bt:Url id="Loads.Url" DefaultValue="https://orhanelturk.github.io/Orhan3/Loads.html"/>
        <bt:Url id="ProjectLocation.Url" DefaultValue="https://orhanelturk.github.io/Orhan3/ProjectLocation.html"/>
        <bt:Url id="Tariffs.Url" DefaultValue="https://orhanelturk.github.io/Orhan3/Tariffs.html"/>
        <bt:Url id="ImportWeatherData.Url" DefaultValue="https://orhanelturk.github.io/Orhan3/ImportHourlyweatherdata.html"/>
        <bt:Url id="GetFromPVGIS.Url" DefaultValue="https://orhanelturk.github.io/Orhan3/GetFromPVGIS.html"/>
        <!-- Add other URLs here -->
      </bt:Urls>
      <bt:ShortStrings>
        <!-- Short Strings -->
        <bt:String id="CustomTab.Label" DefaultValue="LEVANT PV"/>
        <bt:String id="GroupProjectInfo.Label" DefaultValue="Project Info"/>
        <bt:String id="InputSheetButton.Label" DefaultValue="Input Sheet"/>
        <bt:String id="LoadsButton.Label" DefaultValue="Loads"/>
        <bt:String id="ProjectLocationButton.Label" DefaultValue="Project Location"/>
        <bt:String id="TariffsButton.Label" DefaultValue="Tariffs"/>
        <bt:String id="GroupSolarResourceData.Label" DefaultValue="Solar Resource Data"/>
        <bt:String id="ImportWeatherDataButton.Label" DefaultValue="Import Weather Data"/>
        <bt:String id="GetFromPVGISButton.Label" DefaultValue="Get From PVGIS"/>
        <!-- Add other short strings here -->
      </bt:ShortStrings>
      <bt:LongStrings>
        <!-- Long Strings -->
        <bt:String id="InputSheetButton.Description" DefaultValue="Open the Input Sheet for project details."/>
        <bt:String id="LoadsButton.Description" DefaultValue="Manage load inputs for your project."/>
        <bt:String id="ProjectLocationButton.Description" DefaultValue="Define the project location."/>
        <bt:String id="TariffsButton.Description" DefaultValue="Manage project tariffs."/>
        <bt:String id="ImportWeatherDataButton.Description" DefaultValue="Import hourly weather data for analysis."/>
        <bt:String id="GetFromPVGISButton.Description" DefaultValue="Retrieve data from PVGIS."/>
        <!-- Add other long strings here -->
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
