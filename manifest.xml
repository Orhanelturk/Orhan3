<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="TaskPaneApp">
  <Id>cdf19592-a2fc-4b2e-96e8-fcbc050c9b18</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>LEVANT</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="LEVANT"/>
  <Description DefaultValue="A comprehensive PV design and simulation tool."/>
  <IconUrl DefaultValue="https://orhanelturk.github.io/Orhan3/Levantlogo.png"/>
  <HighResolutionIconUrl DefaultValue="https://orhanelturk.github.io/Orhan3/Levantlogo.png"/>
  <SupportUrl DefaultValue="https://www.contoso.com/help"/>
  <AppDomains>
    <AppDomain>https://www.contoso.com</AppDomain>
  </AppDomains>
  <Hosts>
    <Host Name="Workbook"/>
  </Hosts>
  <DefaultSettings>
    <SourceLocation DefaultValue="https://orhanelturk.github.io/Orhan3/taskpane.html"/>
  </DefaultSettings>
  <Permissions>ReadWriteDocument</Permissions>
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="Workbook">
        <DesktopFormFactor>
          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <CustomTab id="TabLEVANTPV">
              <Label resid="CustomTab.Label"/>
              <!-- Group 1: Project Info -->
              <Group id="GroupProjectInfo">
                <Label resid="GroupProjectInfo.Label"/>
                <Control xsi:type="Button" id="InputSheetButton">
                  <Label resid="InputSheetButton.Label"/>
                  <Supertip>
                    <Title resid="InputSheetButton.Label"/>
                    <Description resid="InputSheetButton.Description"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.InputSheet"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
                <Control xsi:type="Button" id="LoadsButton">
                  <Label resid="LoadsButton.Label"/>
                  <Supertip>
                    <Title resid="LoadsButton.Label"/>
                    <Description resid="LoadsButton.Description"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.Loads"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
                <!-- Additional Buttons for Group 1 -->
              </Group>
              <!-- Group 2: Solar Resource Data -->
              <Group id="GroupSolarResourceData">
                <Label resid="GroupSolarResourceData.Label"/>
                <Control xsi:type="Button" id="ImportWeatherDataButton">
                  <Label resid="ImportWeatherDataButton.Label"/>
                  <Supertip>
                    <Title resid="ImportWeatherDataButton.Label"/>
                    <Description resid="ImportWeatherDataButton.Description"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.ImportWeatherData"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
                <!-- Additional Buttons for Group 2 -->
              </Group>
              <!-- Additional Groups follow the same pattern -->
            </CustomTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.InputSheet" DefaultValue="https://example.com/icons/inputsheet.png"/>
        <bt:Image id="Icon.Loads" DefaultValue="https://example.com/icons/loads.png"/>
        <bt:Image id="Icon.ImportWeatherData" DefaultValue="https://example.com/icons/importweatherdata.png"/>
        <!-- Add more icons here -->
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Taskpane.Url" DefaultValue="https://orhanelturk.github.io/Orhan3/taskpane.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="CustomTab.Label" DefaultValue="LEVANT PV"/>
        <bt:String id="GroupProjectInfo.Label" DefaultValue="Project Info"/>
        <bt:String id="InputSheetButton.Label" DefaultValue="Input Sheet"/>
        <bt:String id="LoadsButton.Label" DefaultValue="Loads"/>
        <bt:String id="GroupSolarResourceData.Label" DefaultValue="Solar Resource Data"/>
        <bt:String id="ImportWeatherDataButton.Label" DefaultValue="Import Weather Data"/>
        <!-- Add more short strings here -->
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="InputSheetButton.Description" DefaultValue="Open the Input Sheet for project details."/>
        <bt:String id="LoadsButton.Description" DefaultValue="Manage load inputs for your project."/>
        <bt:String id="ImportWeatherDataButton.Description" DefaultValue="Import hourly weather data for solar calculations."/>
        <!-- Add more long strings here -->
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
